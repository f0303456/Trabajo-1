@article{lorussoDiscusionSobreConcepto2020,
  title = {Una Discusi{\'o}n Sobre El Concepto de Fosa Clandestina y El Contexto Mexicano: El Caso de {{Guanajuato}}},
  shorttitle = {Una Discusi{\'o}n Sobre El Concepto de Fosa Clandestina y El Contexto Mexicano},
  author = {Lorusso, Fabrizio},
  year = {2020},
  month = dec,
  journal = {Historia y Graf{\'i}a},
  number = {56},
  pages = {129--170},
  issn = {2448-783X, 1405-0927},
  doi = {10.48102/hyg.vi56.354},
  urldate = {2024-03-19},
  abstract = {El objetivo del art{\'i}culo es presentar y discutir el concepto de fosa clandestina, aterriz{\'a}ndolo al contexto mexicano y al caso de Guanajuato. Se construye un estado del arte y una panor{\'a}mica conceptual para dar cuenta de la evoluci{\'o}n en el uso y en los significados del concepto de fosa clandestina a nivel internacional y especialmente en M{\'e}xico, en el {\'a}mbito de la crisis de derechos humanos y de violencia actual. Con fuentes hemerogr{\'a}ficas y documentos oficiales se analiza la situaci{\'o}n de las fosas clandestinas en Guanajuato y la postura de la Fiscal{\'i}a estatal al respecto. Finalmente, se hace un balance cr{\'i}tico del proceso legislativo de la Ley de B{\'u}squeda de Personas Desaparecidas del Estado de Guanajuato y de las propuestas de definici{\'o}n de fosa clandestinas que, aunque no fueron incluidas, contribuyeron al debate p{\'u}blico sobre este fen{\'o}meno y se pueden interpretar como parte de una disputa pol{\'i}tica y social.},
